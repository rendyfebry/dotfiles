{
	"editor.fontSize": 13,
	"editor.lineHeight": 16,
	"editor.tabSize": 4,
	"editor.insertSpaces": false,
	"editor.roundedSelection": false,
	"editor.minimap.enabled": true,
	"editor.minimap.renderCharacters": false,
	"editor.snippetSuggestions": "top",
	"editor.formatOnSave": true,
	"editor.renderWhitespace": "all",
	"explorer.openEditors.visible": 0,
	"workbench.settings.useSplitJSON": true,
	"workbench.settings.editor": "json",
	"workbench.colorTheme": "Visual Studio Dark",
	"workbench.activityBar.visible": true,
	"prettier.useTabs": true,
	"go.useLanguageServer": false, // karena useLanguageServer masih dalam aktif development, kalo gak pake module nyalain aja
	"go.coverageDecorator": {
		//  ini untuk melihat coverage test, test dulu nanti akan ada warna warna di text editornya
		"type": "gutter",
		"coveredHighlightColor": "rgba(64,128,128,0.5)",
		"uncoveredHighlightColor": "rgba(128,64,64,0.25)",
		"coveredGutterStyle": "blockblue",
		"uncoveredGutterStyle": "slashyellow"
	},
	"go.formatTool": "goimports", //  di rekomendasikan pakai goimports dibanding gofmt, pada dasarnya goimports melakukan apa yang dilakukan gofmt
	"go.lintTool": "golangci-lint", //  lebih kaya fiturnya https://github.com/golangci/golangci-lint
	"go.toolsEnvVars": {
		"GO111MODULE": "on" // seting env untuk go module on
	},
	"go.gopath": "/Users/rendyfebry/go", // path url untuk gopath
	"go.delveConfig": {
		// settingan untuk debuging https://github.com/Microsoft/vscode-go/wiki/Debugging-Go-code-using-VS-Code
		"dlvLoadConfig": {
			"followPointers": true,
			"maxVariableRecurse": 1,
			"maxStringLen": 64,
			"maxArrayValues": 64,
			"maxStructFields": -1
		},
		"apiVersion": 2,
		"showGlobalVariables": true
	},
	"go.testEnvVars": {
		// set env ketika melakukan test dari vscode
		"DB_CONNECTION": ""
	},
	"go.docsTool": "gogetdoc"
}
